{
  "name": "chikchat",
  "version": "0.0.2",
  "description": "chat app",
  "main": "./bin/index.js",
  "author": "minyee2913, misilelab",
  "license": "AGPL-3.0",
  "private": false,
  "scripts": {
    "compile": "tsc",
    "start": "tsc && npx electron .",
    "deploy":"electron-builder --windows nsis:ia32",
    "deploy:mac":"electron-builder --mac"
  },
  "build": {
    "productName": "ChikChat",
    "appId": "com.nolinux.chikchat",
    "asar": true,
    "protocols": {
      "name": "ChikChat",
      "schemes": [
        "ChikChat"
      ]
    },
    "win": {
      "target": [
        "zip",
        "nsis"
      ],
      "icon": "./icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "buildResources": "./resources/installer/",
      "output": "./dist/",
      "app": "."
    }
  },
  "dependencies": {
    "@joeattardi/emoji-button": "^4.6.4",
    "@types/node": "^20.9.3",
    "@types/ws": "^8.5.10",
    "axios": "^1.6.2",
    "electron-log": "^5.0.1",
    "electron-reload": "^2.0.0-alpha.1",
    "eslist": "^1.0.0-beta.1",
    "typescript": "^5.3.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4",
    "ts-node": "^10.9.1"
  }
}
